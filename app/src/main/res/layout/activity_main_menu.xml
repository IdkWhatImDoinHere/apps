<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/back2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.6"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/backgroundshape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:id="@+id/textView3"
            style="@android:style/Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"

            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:includeFontPadding="true"
            android:shadowColor="#394F78"
            android:text="GoMeds"
            android:textColor="#3940CF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"

            android:fontFamily="casual"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:gravity="center"
            android:text="Pharmacy In Your Pocket!"
            android:textAllCaps="false"
            android:textColor="#050202"
            android:textSize="22sp" />

        <Button
            android:id="@+id/signwithemail"
            android:layout_width="275dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/red"
            android:drawableLeft="@drawable/mail"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="SignIn with Email"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:rippleColor="#FFFFFF"
            />

        <Button
            android:id="@+id/signinphone"
            android:layout_width="275dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bluish"
            android:drawableLeft="@drawable/phone"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text=" signin with phone"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/lineimg" />

        <Button
            android:id="@+id/signup"
            android:layout_width="275dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/green"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="Sign Up"
            android:textAllCaps="true"
            android:textColor="#FDFDFD"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>